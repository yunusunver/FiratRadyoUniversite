@using Microsoft.AspNetCore.Http
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="/images/radyoFırat.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/images/radyoFırat.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Admin Paneli</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />



    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <link href="~/Content/animate.min.css" rel="stylesheet" />



    <link href="~/Content/paper-dashboard.css" rel="stylesheet" />



    <link href="~/Content/demo.css" rel="stylesheet" />

    <!--  Fonts and icons     -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
    <link href="~/Content/themify-icons.css" rel="stylesheet" />
   
</head>
<body>
<div class="wrapper">
    <div class="sidebar" data-background-color="white" data-active-color="danger">
        <!--
        Tip 1: you can change the color of the sidebar's background using: data-background-color="white | black"
        Tip 2: you can change the color of the active button using the data-active-color="primary | info | success | warning | danger"
        -->
        <div class="sidebar-wrapper">
            <div class="logo">
                <a href="#" class="simple-text">
                    Admin Paneli
                </a>
            </div>
            <ul class="nav">
               
                <li class="active">
                    <a href="/Admin/Edit">
                        <i class="ti-user"></i>
                        <p>Admin Profil</p>
                    </a>
                </li>
                <li>
                    <a href="/Kurumsal/Index">
                        <i class="ti-panel"></i>
                        <p>Kurumsal</p>
                    </a>
                </li>
                <li>
                    <a href="/Programci/Index">
                        <i class="ti-panel"></i>
                        <p>Yayıncılar</p>
                    </a>
                </li>
                <li>
                    <a href="/Yayin/Index">
                        <i class="ti-view-list-alt"></i>
                        <p>Yayınlar</p>
                    </a>
                </li>
                <li>
                    <a href="/Roles/Index">
                        <i class="ti-briefcase"></i>
                        <p>Görev Tanımları</p>
                    </a>
                </li>
                <li>
                    <a href="/Kunye/Index">
                        <i class="ti-pencil-alt2"></i>
                        <p>Görevliler</p>
                    </a>
                </li>
                <li>
                    <a href="/Iletisim/Index">
                        <i class="ti-direction-alt"></i>
                        <p>Adresler</p>
                    </a>
                </li>
                <li>
                    <a href="/Vitrin/Index">
                        <i class="ti-gallery"></i>
                        <p>Vitrin Resimleri</p>
                    </a>
                </li>
                <li>
                    <a href="/Top30/Index">
                        <i class="ti-music"></i>
                        <p>Top 30</p>
                    </a>
                </li>
             
            </ul>
        </div>
    </div>
    <div class="main-panel">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar bar1"></span>
                        <span class="icon-bar bar2"></span>
                        <span class="icon-bar bar3"></span>
                    </button>
                    <a class="navbar-brand" href="#">Radyo Fırat <small>89.2</small></a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                      
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="ti-settings"></i>
                                <p class="notification"> </p>
                                <p>İşlemler</p>
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Radyo Fırat 89.2","Index","Home")</li>
                                <li>@Html.ActionLink("Profil","Edit","Admin")</li>
                                <li><a href="#">@Context.Session.GetString("kullaniciAdi")</a></li>
                                <li>@Html.ActionLink("Çıkış", "Logout", "Admin")</li>
                            </ul>
                        </li>
                      
                    </ul>
                </div>
            </div>
        </nav>

        <div class="content">
            <div class="container-fluid">

                @RenderBody()
            </div>
        </div>

        <footer class="footer">
            <div class="container-fluid">
           
                <div class="copyright pull-right">
                    &copy;
                    <script>document.write(new Date().getFullYear())</script> @Html.ActionLink("Radyo Fırat 89.2","Index","Home")
                </div>
            </div>
        </footer>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js" ></script>

<!--   Core JS Files   -->
<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<!--  Checkbox, Radio & Switch Plugins -->
<script src="~/Scripts/bootstrap-checkbox-radio.js"></script>

<script src="~/Scripts/chartist.min.js"></script>
<!--  Notifications Plugin    -->
<script src="~/Scripts/bootstrap-notify.js"></script>
<!--  Google Maps Plugin    -->

<!-- Paper Dashboard Core javascript and methods for Demo purpose -->
<script src="~/Scripts/paper-dashboard.js"></script>
<!-- Paper Dashboard DEMO methods, don't include it in your project! -->
<script src="~/Scripts/demo.js"></script>
</body>


</html>


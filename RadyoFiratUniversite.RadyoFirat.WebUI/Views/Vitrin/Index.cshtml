@model RadyoFiratUniversite.RadyoFirat.WebUI.Models.VitrinListViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<h2>Yayıncılar</h2>

<p>
    @Html.ActionLink("Yeni Resim Oluştur", "Create", new {/* id=item.PrimaryKey */})
</p>
<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Oluşturulma Tarihi</th>
        <th>Resim</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Vitrinler) {
        <tr>
            <td>@item.Id</td>
            <td>@item.CreatedDate</td>
            <td><img src="@item.ImageUrl"  width="50" height="50"/></td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
    </tbody>
</table>
